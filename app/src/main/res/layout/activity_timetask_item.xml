<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f5dfdf"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:tint="#3DBE98"
                    android:src="@drawable/gorcerytaskcircle"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="22dp"
                    android:tint="#3DBE98"
                    android:src="@drawable/gorcerytaskimage"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_TimeTaskName"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:text="TaskName" />
                <TextView
                    android:id="@+id/txt_TimeTaskResult"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/text"
                    android:text="TaskType" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"

                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:tint="@color/red"
                        android:src="@drawable/grocerytasktime"/>
                    <TextView

                    android:id="@+id/txt_TimeTaskMinut"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                    android:textSize="20sp"

                     />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:tint="@color/red"
                            android:src="@drawable/grocerytaskstatusgroupimage"/>
                        <TextView
                    android:id="@+id/txt_TimeTaskstatus"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="" />
                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="50dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="35dp"
                    android:layout_gravity="right"
                    android:id="@+id/timedelete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:tint="#f46b38"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/grocerytaskdelete"
                    android:layout_marginRight="20dp" />
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/viewcolor"
        android:layout_marginTop="20dp"/>

</LinearLayout>
