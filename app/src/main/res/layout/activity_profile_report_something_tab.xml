<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:background="#ede"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

      <RelativeLayout
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_40sdp"
          android:background="#ececec"
          android:orientation="horizontal">

          <TextView
              android:id="@+id/activity_profile_report_something_tv_header_selected_item"
              android:gravity="center_vertical"
              android:textColor="#000"

              android:layout_width="wrap_content"
              android:text="Selected Item"
              android:textSize="20sp"
              android:layout_centerInParent="true"
              android:layout_height="match_parent" />

          <TextView

              android:layout_width="wrap_content"
              android:padding="@dimen/_5sdp"
              android:textSize="20sp"
              android:layout_marginTop="10dp"
              android:textColor="#000"
              android:text="CANCEL"
              android:id="@+id/activity_profile_report_something_correct"
android:layout_marginLeft="20dp"
              android:src="@drawable/ic_action_right"
              android:layout_height="match_parent"
              android:layout_alignParentLeft="true"/>
          <TextView
              android:id="@+id/activity_profile_report_something_save"
              android:layout_alignParentRight="true"
              android:src="@drawable/ic_toolbar_cancel"
              android:textColor="#000"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:text="DONE"
              android:padding="@dimen/_5sdp"
              android:layout_marginRight="20dp"
              android:layout_marginTop="10dp"
              android:textSize="20sp"/>


      </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/activity_profile_report_something_tab"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            android:background="@drawable/tabbackground"
app:tabBackground="@drawable/tab_background"
            android:layout_centerHorizontal="true"
            app:tabPaddingStart="0dp"
            app:tabPaddingEnd="0dp"
            app:tabMode="fixed"
            android:layout_marginTop="10dp"
            app:tabIndicatorColor="@color/white"
            />
        </RelativeLayout>


    </com.google.android.material.appbar.AppBarLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_profile_report_something_tab_pager"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>