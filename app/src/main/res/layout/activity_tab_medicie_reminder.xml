<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medicationback3"


    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar"

                />

            <android.support.design.widget.TabLayout
                android:id="@+id/activity_tab_medicine_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabMode="fixed"
                android:background="#f9f9f9"
                app:tabIndicatorColor="#1986fd"/>
        </android.support.design.widget.AppBarLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/medicationshealth"-->
        <!--&gt;-->

        <!--</LinearLayout>-->

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_tab_medicine_reminder_viewpager"
            android:layout_width="600dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="350dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</RelativeLayout>