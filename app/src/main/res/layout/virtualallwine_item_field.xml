<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lirecipesitem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#f5dfdf"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_virtualallwineimage"
                android:layout_width="65dp"
                android:layout_height="65dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/txt_virtualallwinestrdrink"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text="fdfdsfsfs"

                android:layout_gravity="left"
                android:textColor="@color/text"
                android:textSize="25sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="400dp"


                >
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/ellipse"
                android:id="@+id/txt_btnaddtocart"/>
                <Button


                android:layout_width="25dp"
                android:layout_height="30dp"
                    android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="right"
                android:background="@drawable/barcart"
                 />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/barviewcolor"
        android:layout_marginTop="20dp">

    </View>

</LinearLayout>
