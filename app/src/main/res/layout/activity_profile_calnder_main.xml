<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/medicationback3faded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ececec"

        android:weightSum="3">
        <ImageView
            android:paddingBottom="15dp"
            android:paddingTop="10dp"

            android:id="@+id/activity_profile_calender_header_calender"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/calendra1"
            android:layout_marginLeft="40dp"/>
        <!--android:padding="@dimen/_5sdp"-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView

                android:id="@+id/activity_profile_calender_iv_calender_header_back"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/leftarro" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/activity_profile_calender_tv_header_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/activity_profile_calender_tv_header_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="month"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/activity_profile_calender_tv_header_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="year"
                    android:textSize="30sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/activity_profile_calender_iv_calender_header_forward"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/rightarro" />
        </LinearLayout>
        <ImageView
            android:id="@+id/activity_profile_calender_header_home"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp"
            android:layout_alignParentRight="true"

            android:src="@drawable/home1" />
        <!--android:layout_weight="1"-->
        <!--android:padding="@dimen/_5sdp"-->
    </RelativeLayout>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/activity_profile_calender_main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.viewpager.widget.ViewPager>
        </LinearLayout>
</LinearLayout>