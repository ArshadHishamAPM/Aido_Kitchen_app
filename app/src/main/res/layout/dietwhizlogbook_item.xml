<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/liRecipeItemAdapter"
        android:layout_height="wrap_content"
        android:background="#f5dfdf"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:elevation="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img_logbookItem"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:layout_marginTop="-10dp"
    android:src="@drawable/menu"/>
               <!-- <ImageView
                    android:id="@+id/img_logbookItem"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:weightSum="2"


                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginLeft="15sp"
                    android:id="@+id/txt_logbooktitle_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Title" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="16dp"
                        android:src="@drawable/winedate" />
                    <TextView
                    android:id="@+id/txt_logbooktitle_date"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="20sp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="15dp"

                    android:text="Date" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:id="@+id/delete"
                    android:src="@drawable/deletebox"
                    android:layout_marginRight="70dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="58dp"

                    />
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/redring"
                    android:id="@+id/vine_delete"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="40dp"
                    />

            </RelativeLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"/>
    </LinearLayout>

</LinearLayout>