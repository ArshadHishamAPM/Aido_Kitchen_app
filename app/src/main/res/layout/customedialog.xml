<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#e2e2e2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#747373"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:text="Add Store"/>
        </LinearLayout>
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="25sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
    android:textColor="#828383"
    android:text="Enter a store name"/>
            <EditText
                android:id="@+id/edt_AddStoreName"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:padding="15dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"

                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="#828383"
                android:layout_gravity="center"
                android:background="@drawable/groceryeditextbackground"
                />
    <!--android:hint="StoreName"-->
             </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/viewcolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/skyblue"
                android:textSize="25sp"
                android:text="CANCEL"
                android:padding="20dp"
                android:id="@+id/cancel"
                android:background="@android:color/transparent"
                android:layout_weight="1"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/viewcolor"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#828383"
                android:textSize="25sp"
                android:text="ADD"
                android:background="@android:color/transparent"
                android:padding="20dp"
                android:id="@+id/save"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
